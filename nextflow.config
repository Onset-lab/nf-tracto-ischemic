nextflow.enable.moduleBinaries = true

params {
    help = false
    input = false
    atlas_reference = false
    bundle_atlas = false
    
    // ** Output Options ** //
    output_dir = "./results"
}

includeConfig "modules.config"

process {
    publishDir = [path: {"${params.output_dir}/$meta.id/${task.process.split(':')[-1]}"}, mode: 'copy']
    scratch = true
    errorStrategy = 'terminate'
    maxRetries = 3
    maxErrors = -1
    stageInMode = 'copy'
    stageOutMode = 'rsync'
    tag = { "$sid" }
    cache = 'lenient'
}


profiles {
    slurm {
        process {
            executor = 'slurm'
            errorStrategy = 'retry'
            maxRetries = 1
            maxForks = 500
        }
        executor {
            pollInterval = '180 sec'
            queueGlobalStatus = true
            queueStatInterval = '3 min'
            submitRateLimit = '100/1min'
            queueSize = 500
        }
    }
    docker {
        docker.runOptions = '--entrypoint ""'
        docker.enabled          = true
        conda.enabled           = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
        apptainer.enabled       = false
    }
    apptainer {
        apptainer.enabled       = true
        apptainer.autoMounts    = true
        conda.enabled           = false
        docker.enabled          = false
        singularity.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
    }
    singularity {
        singularity.enabled       = true
        singularity.autoMounts    = true
        conda.enabled           = false
        docker.enabled          = false
        apptainer.enabled     = false
        podman.enabled          = false
        shifter.enabled         = false
        charliecloud.enabled    = false
    }
}

manifest {
    name = 'NF-Tracto-Ischemic'
    description = 'Register post-operative T1w image, mask and bundle atlas onto pre-operative T1w image.'
    version = '0.1-edge'
    homePage = 'Todo'
}
